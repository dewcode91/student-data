<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardCornerRadius="16dp"
        android:layout_margin="10dp"
        android:elevation="8dp"
        android:backgroundTint="#EDFFFFFF"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp">

            <!-- Left section with details -->
            <LinearLayout
                android:id="@+id/detailsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="50dp"> <!-- space for delete icon -->


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:id="@+id/textViewStudentCourseName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Course Name"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textViewManageSugarDate"
                        android:layout_width="0dp"
                        android:visibility="gone"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Date"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:id="@+id/textViewStudentSession"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Session"
                        android:inputType="number"
                        android:layout_marginBottom="8dp"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textViewStudentName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp"
                        android:text="Student Name"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/textViewGender"
                        android:layout_width="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:layout_height="wrap_content"
                        android:text="Gender"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/textViewGardianName"
                        android:layout_width="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:layout_height="wrap_content"
                        android:text="Guardian Name"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/textViewNationality"
                        android:layout_width="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:layout_height="wrap_content"
                        android:text="Nationality"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/textViewphysically"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="physically"
                        android:textSize="16sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:id="@+id/textViewMobile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mobile"
                        android:layout_marginBottom="8dp"
                        android:textSize="16sp"/>

                    <TextView
                        android:id="@+id/textViewEmail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="Email"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/textViewAddress"
                        android:layout_width="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:layout_height="wrap_content"
                        android:text="Address"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/textViewCity"
                        android:layout_width="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:layout_height="wrap_content"
                        android:text="City"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/textViewState"
                        android:layout_width="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:layout_height="wrap_content"
                        android:text="State"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/textViewCountry"
                        android:layout_width="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:layout_height="wrap_content"
                        android:text="Country"
                        android:textSize="16sp" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:id="@+id/textViewHscBoard"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Board"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textViewHscCgpa"
                        android:layout_marginStart="3dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="cgpa"
                        android:textSize="14sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:id="@+id/textViewSscBoard"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Board"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textViewSscCgpa"
                        android:layout_width="0dp"
                        android:layout_marginStart="3dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="cgpa"
                        android:textSize="14sp" />

                </LinearLayout>

            </LinearLayout>

            <!-- Delete Button aligned center-end -->
            <ImageView
                android:id="@+id/buttonStudentEdit"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/baseline_edit_24"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="5dp"/>

            <ImageView
                android:id="@+id/buttonStudentDelete"
                android:layout_width="30dp"
                android:layout_marginTop="50dp"
                android:layout_height="30dp"
                android:src="@drawable/baseline_delete_24"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="5dp"/>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>





</LinearLayout>